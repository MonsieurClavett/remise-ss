<UserControl x:Class="Final.Views.MeteoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:Final.Properties"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <Grid Grid.Column="0" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            

            <Border Grid.Row="0"
                    BorderBrush="#CFCFCF"
                    BorderThickness="1"
                    Background="White">
                <ListBox x:Name="RegionsList"
                            ItemsSource="{Binding Regions}"
                            SelectedItem="{Binding RegionSelectionnee}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            MouseLeftButtonUp="RegionsList_MouseLeftButtonUp">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Nom}"
                           FontWeight="Bold"/>

                                <TextBlock FontSize="11"
                           Foreground="Gray"
                           Text="{Binding Latitude, StringFormat=Lat : {0:F4}}"/>

                                <TextBlock FontSize="11"
                           Foreground="Gray"
                           Text="{Binding Longitude, StringFormat=Lon : {0:F4}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>

            </Border>



            <StackPanel Grid.Row="1" Margin="0,10,0,0">

                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{x:Static p:traduction.Region}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Height="24"
                 Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{x:Static p:traduction.Latitude}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Height="24"
                 Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{x:Static p:traduction.Longitude}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Height="24"
                 Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Button Content="+"
            Width="34"
            Height="24"
            HorizontalAlignment="Left"
            Command="{Binding CommandeAjouter}"/>
            </StackPanel>

        </Grid>


        <Grid Grid.Column="1" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,6,6,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock
        Text="{Binding RegionSelectionnee.Nom}"
        FontSize="20"/>

                    <TextBlock
        Text="{Binding RegionSelectionnee.Id}"
        FontSize="11"
        Foreground="Gray"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="X"
                        Width="26"
                        Height="22"
                        Margin="8,0,0,0"
                        Command="{Binding CommandeSupprimer}"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Previsions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#CFCFCF" BorderThickness="1" Padding="10" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding datetime}" VerticalAlignment="Center"/>

                                    <Image Grid.Column="1" Width="60" Height="60"
         Stretch="Uniform"
         Source="{Binding weather.IconUrl}" />

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="{Binding weather.description}" />
                                        <TextBlock Text="{Binding max_temp, StringFormat=Max : {0} °C}" />
                                        <TextBlock Text="{Binding min_temp, StringFormat=Min : {0} °C}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
